<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MY PROFILE</title>
    <link rel="stylesheet" href="public/profilep.css">
</head>

<body>
    <div id="mainbox" class="main">


        <div class="box" id="heading">
            <h2>MY PROFILE</h2>
        </div>

        
        <div id="profilepic">
           <img src="public/profilepics/<%= id%>.png" alt="profilepic" id="photo">
           
        </div>
        <div id="details" class="box">
            <table class="table_style">
                <tr>
                    <td>
                        NAME:
                    </td>
                    <td>
                        <span id="name">
                            <%= name %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>
                        ROLLNO:
                    </td>
                    <td>
                        <span id="rollno">
                            <%= id %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>
                        EMAIL:
                    </td>
                    <td>
                        <span id="email">
                            <%= email %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>
                        BRANCH:
                    </td>
                    <td>
                        <span id="branch">
                            <%= branch %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>
                        BATCH:
                    </td>
                    <td>
                        <span id="batch">
                            <%= batch %>
                        </span>
                    </td>
                </tr>
            </table>
            <br>
            <br>
            <div id="btn">
            <a href="/" class="btn1">VIEW MY COURSES</a></div>
        </div>
    </div> 
    <script src="public/profile.js">
    </script>
</body>

</html>
